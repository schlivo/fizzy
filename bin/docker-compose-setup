#!/bin/bash
# Initialization script for docker-compose
# Creates the .github_token file if it doesn't exist

if [ ! -f .github_token ]; then
  echo "Creating empty .github_token file..."
  touch .github_token
  echo "File created. If you need to access private GitHub gems,"
  echo "add your token: echo 'your_token' > .github_token"
fi

exec docker-compose "$@"
